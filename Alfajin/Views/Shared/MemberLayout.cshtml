<!doctype html>
<html lang="en">
<head>
    <title>@Session["Name"] @Session["Surname"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/sidebar/css/style.css">
</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="p-4 pt-5">
                <a href="#" class="img logo rounded-circle mb-5" style="background-image: url(@Session["Picture"]);"></a>
                <h5 style="text-align:center; margin-top:-40px; color:white">@Session["Name"] @Session["Surname"]</h5>
                <ul class="list-unstyled components mb-5">
                    <li>
                        <a href="/MainPage/Index/"><i class="fa fa-fw fa-home"></i> Əsas səhifə</a>
                    </li>
                    <li>
                        <a href="/Profil/Index/"><i class="fa fa-fw fa-user"></i> Profilim</a>
                    </li>
                    <li>
                        <a href="/Profil/MemberBooks/"><i class="fa fa-fw fa-book"></i> Kitablarım</a>
                    </li>
                    <li>
                        <a href="/Profil/Books/"><i class="fa fa-fw fa-book"></i> Mövcud Kitablar</a>
                    </li>
                    <li>
                        <a href="/Profil/Author/"><i class="fa fa-fw fa-pencil-square-o"></i> Müəlliflər</a>
                    </li>
                    <li>
                        <a href="/Profil/Category/"><i class="fa fa-fw fa-reorder"></i> Janrlar</a>
                    </li>
                    <li>
                        <a href="/Message/Index/"><i class="fa fa-fw fa-comment"></i> Mesajlar</a>
                    </li>
                    <li>
                        <a href="/Profil/Notification/"><i class="fa fa-fw fa-bell"></i> Bildirişlər</a>
                    </li>
                    <li>
                        <a href="/Login/SignOut/"><i class="fa fa-fw fa-arrow-circle-left"></i> Çıxış</a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa fa-bars"></i>
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="/MainPage/Index/"><i class="fa fa-fw fa-home"></i> Əsas səhifə</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/MainPage/About/">Haqqımızda</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/MainPage/Contact/">Əlaqə</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>
    <script src="~/sidebar/js/jquery.min.js"></script>
    <script src="~/sidebar/js/popper.js"></script>
    <script src="~/sidebar/js/bootstrap.min.js"></script>
    <script src="~/sidebar/js/main.js"></script>
</body>
</html>