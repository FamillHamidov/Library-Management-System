@model MVCLibrary.Models.EntityFramework.ActionTBL
@{
    ViewBag.Title = "GiveBook";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@*DROPDOWLISTI BIRDE YOXLUYARSAN. ALINMASA SEARCH-NAN VERMEYI YOXLA*@
@*DROPDOWNLISTE SECDIYIM MELUMAT VIEW HISSEDE VIEWBAGA OTURMUR. NULL GOSTERIR*@

<form class="form-group" method="post">
    <div style="margin-top:15px">
        <label>Kitabın adı</label>
        @Html.DropDownListFor(x => x.BookTBL.Id, (List<SelectListItem>)ViewBag.bk1, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>İstifadəçi adı</label>
        @Html.DropDownListFor(m => m.MemberTBL.Id, (List<SelectListItem>)ViewBag.mbr1, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>İşçi adı</label>
        @Html.DropDownListFor(x => x.StaffTBL.Id, (List<SelectListItem>)ViewBag.stf1, new { @class = "form-control" })
    </div>
    <div style=" margin-top:15px">
        <label>Verilmə tarixi</label>
        <input type="text" class="form-control" name="PurchaseDate" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <label>Alış tarixi</label>
        <input type="text" class="form-control" name="ReturnDate" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Əlavə edin</button>
        <input type="hidden" value="false" name="Status" /> 
    </div>
</form>

