@using MVCLibrary.Models.EntityFramework
@model List<CommentTBL>
@foreach (var item in Model)
{
    <div class="review_item">
        <div class="media">
            <div class="d-flex">
                <img src="~/Admin/dist/img/2.png" alt="" style="width:45px; height:40px"/>
            </div>
            <div class="media-body">
                <h4>@item.Name</h4>
                <h5>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</h5>
            </div>
        </div>
        <p>
           @item.Comment
        </p>
    </div>

}

