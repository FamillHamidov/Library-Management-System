@using MVCLibrary.Models.EntityFramework
@model List<AdminTBL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" href="~/Admin/dist/css/adminlte.min.css">
<link rel="stylesheet" href="~/Admin/plugins/fontawesome-free/css/all.min.css">
<div style="margin-top:-30px; margin-bottom:10px">
    <h3 style="text-align:left"><b><em><i class="fa fa-hashtag"></i>Admin</em></b></h3>
</div>
<section class="content">
    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">

                        <div class="card bg-light">
                            <div class="card-header text-muted border-bottom-0">
                                Admin
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="lead"><b>@item.Name @item.Surname</b></h2>
                                        <p class="text-muted text-sm"><b>İstifadəçi adı:<br /> </b>@item.Username </p>
                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-unlock-alt"></i></span>@item.Password </li>
                                            <li class="small" style="margin-top:5px"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span>@item.Mail</li>

                                        </ul>
                                    </div>
                                    <div class="col-5 text-center">
                                        <img src="@item.Picture" alt="" class="img-circle img-fluid">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="/Settings/TakePicture/@item.Id" class="btn btn-sm bg-primary">
                                        <i class="fas fa-camera"></i>
                                    </a>
                                    @Html.ActionLink(" ","RemoveAdmin", new { id = item.Id }, new { @class = "btn btn-danger fa fa-trash",
                                    onclick= "return confirm('Silmək istədiyinizdən əminsinizmi?')"})
                                    <a href="/Settings/TakeAdmin/@item.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-user"></i> Profili Görüntülə
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <!-- /.card-footer -->
    </div>
    <!-- /.card -->
</section>

<a style="margin-bottom:15px" href="/Settings/NewAdmin/" class="btn btn-dark">
    <i class="fa fa-plus" style="margin-right:5px"></i>Yeni admin əlavə et
</a>
<script src="~/Admin/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/Admin/dist/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="~/Admin/dist/js/demo.js"></script>


